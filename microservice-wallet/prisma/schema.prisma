generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum TransactionType {
  CREDIT
  DEBIT
}

model Transaction {
  id        String           @id @default(cuid())  @db.VarChar(25)
  user_id   String                                 @db.VarChar(25)
  type      TransactionType
  amount    Int
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
}